

@model Jig_system_control.Models.RepariJigDetail
@{
    ViewBag.Title = "Repair Jig Detail";
    Layout = "~/Views/Shared/_AfterLogin.cshtml";
}

<link href="~/css/toastr.min.css" rel="stylesheet" />

<div class="card shadow-lg mt-3 p-3" style="border-radius: 10px;">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center bg-primary text-red p-3 rounded-top">
        <div>
            <h4 class="mb-0">Repair Jig</h4>
        </div>

        <div>
            <strong>Code:</strong><span class="badge badge-success">@Model.Jig.JigCode |</span>
            <strong>Name:</strong><span class="badge badge-warning">@Model.Jig.JigName |</span>
            <strong>Model:</strong> <span class="badge badge-danger">@Model.Jig.Model |</span>
            <strong>Status:</strong>
            <span class="badge badge-light">@Model.Repair.Status</span>
        </div>
    </div>

    <div class="row mt-3">
        <!-- LEFT SIDE -->

        <div class="col-md-8">
            <!-- Repair Slip -->
            <div class="card mb-3 p-3">
                <h5 class="text-primary">Repair Slip</h5>

                <div class="form-group">
                    <label>Error detail/ Nội dung lỗi</label>
                    <textarea class="form-control" rows="3" id="Problem">@Model.Repair.Problem</textarea>
                </div>

                <div class="form-row">
                    <div class="col-md-4">
                        <label>Picture/ Hình ảnh sau khi sửa</label>
                        <div class="border p-3 text-center rounded upload-area" id="uploadArea">
                            <input type="file" id="FileUpload" class="d-none" />
                            <label for="FileUpload" class="text-muted">Click to upload</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label>Error cause/ Nguyên nhân</label>
                        <textarea class="form-control" rows="2" id="Cause"></textarea>
                    </div>
                    <div class="col-md-4">
                        <label>Action/ Cách sửa</label>
                        <textarea class="form-control" rows="2" id="Action"></textarea>
                    </div>
                </div>

                <div class="mt-3">
                    <button class="btn btn-outline-primary"  onclick="openAddPartModal_design()" >Request Design</button>
                    <button class="btn btn-outline-info" onclick="openAddPartModal_document()">Request Document</button>
                    <button class="btn btn-primary" onclick="$('#modalRequest').modal('show')">
                        <i class="fe fe-plus"></i> Tạo Request
                    </button>
                </div>
            </div>

            <!-- Repair Confirm -->
            <div class="card p-3">
                <h5 class="text-primary">Repair Confirm</h5>

                <div class="form-group mt-2">
                    <label>Remark/ Ghi chú</label>
                    <textarea class="form-control" rows="2">@Model.Repair.Remark</textarea>
                </div>

                <button class="btn btn-success" id="btnConfirmRepair">Confirm Repair</button>

            </div>
        </div>

        <!-- RIGHT SIDE -->
        <div class="col-md-4">
            <!-- Repair History -->
            <div class="card timeline shadow">
                <h5 class="text-primary">Repair History</h5>
                <div id="requestedParts" style="max-height: 220px; overflow-y: auto; scrollbar-width: thin; scrollbar-color: #aaa transparent;">
                    @if (Model.History != null && Model.History.Any())
                    {
                        foreach (var item in Model.History)
                        {
                            <h6 class="text-uppercase text-muted mb-2">@item.RepairDate</h6>
                            <div class="pb-3 timeline-item item-primary border-left pl-4">
                                <div class="mb-1">
                                    <strong>@item.Technician</strong>
                                    <span class="text-muted small mx-2">đã xử lý lỗi</span>
                                    <span class="badge badge-danger">@item.Problem</span>
                                </div>
                                <div><strong>Cách sửa:</strong> @item.Action</div>
                                <p class="small text-muted mb-0">@item.Remark</p>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-muted text-center py-4">Chưa có lịch sử sửa chữa nào.</div>
                    }
                </div>

            </div>



            <!-- Request Part -->

            <div class="card p-3">
                <h5 class="text-primary">Part List</h5>
                <div id="requestedParts" style="max-height: 270px; overflow-y: auto; scrollbar-width: thin; scrollbar-color: #aaa transparent;">
                    @if (Model.PartList != null && Model.PartList.Any())
                    {
                        foreach (var part in Model.PartList)
                        {
                            <div class="d-flex justify-content-between align-items-center border p-2 rounded mb-1">
                                <div class="partinfo">
                                    <strong>@part.Code</strong> — @part.Name
                                    <small class="text-muted d-block">@part.Ghichu</small>
                                </div>
                                <button class="btn btn-sm btn-outline-danger btnUsePart" data-id="@part.ID">  <i class="fe fe-tool"></i>  Thay thế</button>
                            </div>

                        }
                    }
                    else
                    {
                        <div class="text-muted small">No part list yet.</div>
                    }
                </div>

                <div class="mt-2 text-right">
                    <button class="btn btn-outline-primary" onclick="openAddPartModal()">+ Add Part List</button>
                </div>
            </div>


        </div>
    </div>
</div>

<div class="modal fade" id="modalAction" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalTitle"></h5>
                <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" id="modalBody">
                <!-- Nội dung form sẽ load động bằng AJAX -->
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalrequest" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="modalTitleRequest"></h5>
                <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" id="modalBodyRequest">
                <!-- Nội dung form sẽ load động bằng AJAX -->
            </div>
        </div>
    </div>
</div>




@section Scripts {
    <link rel="stylesheet" href="~/css/select2.css">

    <script src="~/js/jquery.min.js"></script>
    <script src='~/js/select2.min.js'></script>
    <script src="~/js/toastr.min.js"></script>
    <script>
            const jigId = @(Model != null ? Model.Jig.JigID : 0);


            $('#uploadArea').click(function () {
                $('#FileUpload').click();
            });

            $('#FileUpload').on('change', function () {
                showNotification('Tải file thành công!', 'success');
            });
            function openAddPartModal() {
                $("#modalTitle").text("Thêm linh kiện mới");
                $("#modalBody").load("/Home/AddPartPartial?jigId=" + jigId, function () {
                    $("#modalAction").modal("show");
                });
             }


        function openAddPartModal_document() {
            $("#modalTitleRequest").text("Request update document");
            $("#modalBodyRequest").load("/RepairMaintenance/AddPartPartial?jigId=" + jigId, function () {
                $("#modalrequest").modal("show");
            });

        }

        function openAddPartModal_design() {
            $("#modalTitleRequest").text("Request update design");
            $("#modalBodyRequest").load("/RepairMaintenance/AddPartPartial_design?jigId=" + jigId, function () {
                $("#modalrequest").modal("show");
            });

        }

    </script>
    <script>
        $(document).on('click', '.btnUsePart', async function () {
            const id = $(this).data('id');
            const $btn = $(this);
            const partInfo = $btn.closest('.d-flex').find('.partinfo').text().trim();
            let qty = prompt(`Nhập số lượng Lấy`);

            if (qty === null) return; // Cancel
            qty = parseInt(qty);


            $.ajax({
                url: '/SparePart/UseSpare',
                type: 'POST',
                data: {
                    spareId: id,
                    usedQty: qty
                },
                success: function (res) {

                    if (res.success) {
                        showNotification('Đã lấy thành công!', 'success');
                        const $action = $('#Action');
                        if ($action.length) {
                            let current = $action.val() || "";
                            $action.val(current + `\n- Đã thay thế ${partInfo}, SL: ${qty}`);
                        } else {
                            console.warn('Không tìm thấy ô #Action trong DOM');
                        }

                    } else {
                        showNotification('Lỗi: ' + res.message, 'error');
                        $btn.prop('disabled', false).text('Approve');
                    }
                },
                error: function (xhr, status, error) {
                    showNotification('Không thể kết nối server: ' + error, 'error');
                    $btn.prop('disabled', false).text('Approve');
                }
            });
        });
        function showNotification(message, type) {
            // Sử dụng toastr nếu có, hoặc dùng alert
            if (typeof toastr !== 'undefined') {
                if (type === 'success') {
                    toastr.success(message);
                } else {
                    toastr.error(message);
                }
            } else {
                alert(message);
            }
        }
    </script>
    <script>
        $(document).on('click', '#btnConfirmRepair', function () {
            const formData = new FormData();

            formData.append("RepairID", @Model.Repair.RepairID);
            formData.append("JigID", @Model.Repair.JigID);
            formData.append("Problem", $('#Problem').val());
            formData.append("Cause", $('#Cause').val());
            formData.append("Action", $('#Action').val());
            formData.append("Remark", $('textarea[rows="2"]').last().val()); // Remark cuối
            formData.append("FileUpload", $('#FileUpload')[0].files[0]);

            $.ajax({
                url: '/RepairMaintenance/SaveRepair',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (res) {
                    if (res.success) {
                        toastr.success("Đã lưu thông tin sửa chữa!");
                        setTimeout(1000, window.location.reload());
                        window.location.href = '/RepairMaintenance/index';
                    } else {
                        toastr.warning(res.message || "Không thể lưu thông tin");
                    }
                },
                error: function () {
                    toastr.error("Lỗi kết nối đến server!");
                }
            });
        });

    </script>
    <script>

        $('#searchJig').select2({
            placeholder: "Nhập mã Jig hoặc tên...",
            minimumInputLength: 2,
            ajax: {
                url: '/Home/GetSuggestions',
                dataType: 'json',
                delay: 250,
                data: function (params) {
                    return { query: params.term };
                },
                processResults: function (data) {
                    return {
                        results: data.map(function (x) {
                            return {
                                id: x.JigID,
                                text: `${x.JigCode} - ${x.JigName} (${x.Model})`
                            };
                        })
                    };
                }
            }
        });

        $('#searchJig').on('select2:select', function (e) {
            const jigId = e.params.data.id;
            console.log('Selected JigID:', jigId); // debug
            if (jigId)
                window.location.href = '/RepairMaintenance/RepairDetail/' + jigId;
            else
                alert('Không lấy được ID Jig!');
        });

        $(function () {
            // Autocomplete
            $("#jigInput").on("keyup", function () {
                let keyword = $(this).val();
                if (keyword.length < 2) return;

                $.get("/Home/GetSuggestions", { term: keyword }, function (data) {
                    let list = data || [];
                    // Gợi ý đơn giản bằng datalist
                    let datalist = $("#jigSuggestions");
                    if (datalist.length === 0) {
                        $("#jigInput").after('<datalist id="jigSuggestions"></datalist>');
                        $("#jigInput").attr("list", "jigSuggestions");
                        datalist = $("#jigSuggestions");
                    }
                    datalist.empty();
                    list.forEach(item => datalist.append(`<option value="${item}"/>`));
                });
            });

            // Form submit
        });
    </script>
}